{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2020", "dom"],
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "include": [
    "ts/**/*.ts",
    "leetcode/**/*.ts",
    "leetcode/**/*.js",
    "leetcode/**/*.mjs"
  ],
  "exclude": [
    "./dist/**/*"
  ]
}
