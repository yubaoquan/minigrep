{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2021", "dom", "deno.ns"],
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext"
  },
  "include": [
    "ts/**/*.ts",
    "leetcode/**/*.ts",
    "leetcode/**/*.js",
    "leetcode/**/*.mjs"
  ],
  "exclude": [
    "dist",
    "src",
    "gui"
  ]
}
